---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import PostCard from "../../components/blog/PostCard.astro";

const allPosts = await Astro.glob("./*.md");
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <div class="hero-section2 bg-[url('/img/br_tuyendung.jpg')]">
            <div
                class="flex flex-col py-48 text-white font-semibold text-8xl"
                data-aos="fade-up"
            >
                <h1 class="text-5xl md:text-6xl leading-normal mx-auto">
                    Blog chính thức
                    <div class="font-semibold">GODA NETWORK</div>
                </h1>
            </div>
        </div>
        <section
            class="py-20 mx-auto grid px-4 grid-cols-1 md:grid-cols-2 lg:w-2/3 gap-6"
        >
            {allPosts.map((post) => <PostCard {post} />)}
        </section>
        <Footer />
    </body>
</html>
