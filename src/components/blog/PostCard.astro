---
import { formatDate } from "../../js/script";

const { post, url } = Astro.props;
const { title, description, date, cover, coverAlt } = post.frontmatter;
---

<article
    class="overflow-hidden rounded-lg shadow transition hover:shadow-lg group"
>
    <img alt={coverAlt} src={cover} class="h-56 w-full object-cover" />

    <div class="bg-white p-4 sm:p-6">
        <time datetime="2022-10-10" class="block text-xs text-gray-500">
            {formatDate(date)}
        </time>

        <a href={post.url}>
            <h3 class="mt-0.5 text-lg text-gray-900 group-hover:underline">
                {title}
            </h3>
        </a>

        <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
            {description}
        </p>
    </div>
</article>
