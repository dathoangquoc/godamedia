---
import headerImg from "../../public/img/logo.png";
import { Image } from "astro:assets";
---

<header class="bg-white">
	<div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
		<div class="flex h-16 items-center justify-between">
			<div class="md:flex md:items-center md:gap-12">
				<a class="block" href="/">
					<span class="sr-only">Home</span>
					<Image
						src={headerImg}
						alt="Goda Media Logo"
						class="object-contain h-16 w-fit self-start"
					/>
				</a>
			</div>

			<div class="hidden lg:block">
				<nav aria-label="Global">
					<ul class="flex items-center gap-6 text-sm">
						<li>
							<a
								href="/#vct"
								class="text-black hover:text-blue-400 transition-all"
								>Về chúng tôi</a
							>
						</li>
						<li>
							<a
								href="/#hst"
								class="text-black hover:text-blue-400 transition-all"
								>Hệ sinh thái</a
							>
						</li>
						<li>
							<a
								href="/#vh"
								class="text-black hover:text-blue-400 transition-all"
								>Văn hóa</a
							>
						</li>
						<li>
							<a
								href="/#dt"
								class="text-black hover:text-blue-400 transition-all"
								>Đối tác</a
							>
						</li>
						<li>
							<a
								href="/#lh"
								class="text-black hover:text-blue-400 transition-all"
								>Liên hệ</a
							>
						</li>
						<li>
							<a
								href="/blog"
								class="text-black hover:text-blue-400 transition-all"
								>Con người GODA</a
							>
						</li>
						<li>
							<a
								href="/tuyen-dung"
								class="text-black hover:text-blue-400 transition-all"
								>Tuyển dụng</a
							>
						</li>
					</ul>
				</nav>
			</div>
			<div class="dropdown dropdown-bottom dropdown-end lg:hidden">
				<div
					tabindex="0"
					role="button"
					class="btn m-1 p-3 bg-blue-500 text-white hover:text-blue-500"
				>
					Menu
				</div>
				<ul
					tabindex="0"
					class="dropdown-content menu bg-blue-500 rounded-box z-[1] w-52 p-2 shadow"
				>
					<li>
						<a href="/#vct" class="">Về chúng tôi</a>
					</li>
					<li>
						<a href="/#hst" class="">Hệ sinh thái</a>
					</li>
					<li>
						<a href="/#vh" class="">Văn hóa</a>
					</li>
					<li>
						<a href="/#dt" class="">Đối tác</a>
					</li>
					<li>
						<a href="/#lh" class="">Liên hệ</a>
					</li>
					<li>
						<a href="/blog" class="">Con người GODA</a>
					</li>
					<li>
						<a href="/tuyen-dung" class="">Tuyển dụng</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</header>
